#!/usr/bin/env node

var forever  = require('forever'),
psm = require('../lib/psm'),
Manager = require('../lib/psm/manager').Manager,
man = new Manager();

/*
var mon = new forever.startDaemon(__filename, {
    max: 1,
    silent: true,
    pidFile: psm.config.pids.manager
});

forever.startServer(mon);
*/

psm.init(function(err) {
    if(err) process.exit(1);
    else {
        man.startup(function(err) {
            if(err) psm.log.error(err, 'Error starting manager');
        });
    }
});